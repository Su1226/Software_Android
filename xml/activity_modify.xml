<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modifyActivity"
    android:orientation="vertical"
    android:padding="10dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum"
            android:text="전화번호"
            android:textColor="#424242"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/Modify_phone"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/nanum"
            android:gravity="center"
            android:hint="ex) 01012345678"
            android:textSize="20dp"></EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum"
            android:text="지병"
            android:textColor="#424242"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/Modify_illness"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/nanum"
            android:hint="ex) 당뇨"
            android:textSize="20dp"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum"
            android:text="비상 연락망"
            android:textColor="#424242"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/Modify_emergency"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/nanum"
            android:gravity="center"
            android:hint="ex) 01077777777"
            android:textSize="20dp"></EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum"
            android:text="병원 전화번호"
            android:textColor="#424242"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/Modify_hospital"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/nanum"
            android:gravity="center"
            android:hint="ex) 0511199111"
            android:textSize="20dp"></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum"
            android:text="투여 약"
            android:textColor="#424242"
            android:textSize="20dp"></TextView>

        <EditText
            android:id="@+id/Modify_medicine"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/nanum"
            android:hint="ex) 당뇨약"
            android:textSize="20dp"></EditText>
    </LinearLayout>




    <Button
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/nanum"
        android:textSize="30dp"
        android:text= "저장"
        android:id = "@+id/Modify_btn1">
    </Button>

</LinearLayout>